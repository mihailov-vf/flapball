{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5"
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}